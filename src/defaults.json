{
  "common": {
    "artifacts": null,
    "credentials": {
      "password": null,
      "username": null
    },
    "debug": false,
    "dest": "dist",
    "key": {
      "private": null,
      "public": null
    },
    "names": {
      "build": "build",
      "clean": "clean",
      "deploy": "deploy",
      "package": "package",
      "publish": "publish",
      "version": "version",
      "watch": "watch"
    },
    "sources": {
      "css": "src/**/*.css",
      "csslint": "src/**/*.css",
      "html": "src/**/*.html",
      "less": "src/**/*.less",
      "lesslint": "src/**/*.less",
      "javascript": "src/**/*.js",
      "js": "src/**/*.js",
      "jslint": "src/**/*.js",
      "php": "src/**/*.php",
      "sass": [
        "src/**/*.sass",
        "src/**/*.scss"
      ],
      "sasslint": [
        "src/**/*.sass",
        "src/**/*.scss"
      ],
      "ts": "src/**.*.ts",
      "tslint": "src/**.*.ts",
      "typescript": "src/**.*.ts"
    }
  },
  "options": {
    "build": {
      "default": true
    },
    "deploy": {},
    "package": {
      "dest": ":{{common.dest}}",
      "format": "{{name}}.{{version}}.zip",
      "src": ":{{common.dest}}/**/*",
      "tasks": ":{{common.names.build}}"
    },
    "publish": {
      "src": [
        "package.json"
      ],
      "npm": {
        "credentials": ":{{common.credentials}}",
        "registry": "https://registry.npmjs.org"
      }
    },
    "sites": {
      "ftp": {
        "credentials": ":{{common.credentials}}",
        "host": null,
        "key": ":{{common.key}}",
        "secure": false
      },
      "ssh": {
        "credentials": ":{{common.credentials}}",
        "host": null,
        "key": ":{{common.key}}",
        "secure": false
      }
    },
    "watch": {
      "configurations": {
        "src": [
          "bower.json",
          "gulpfile.js",
          "gulpfile.json",
          "package.json"
        ]
      },
      "debounce": 500,
      "interval": 100
    }
  },
  "plugins": {}
}