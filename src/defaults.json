{
  "common": {
    "artifacts": null,
    "credentials": {
      "password": null,
      "username": null
    },
    "debug": false,
    "destinations": {
      "default": "dist"
    },
    "dest": ":{{{common.destinations.default}}}",
    "key": {
      "private": null,
      "public": null
    },
    "main": [
      "dist/index.js"
    ],
    "names": {
      "build": "build",
      "clean": "clean",
      "deploy": "deploy",
      "package": "package",
      "publish": "publish",
      "version": "version",
      "watch": "watch"
    },
    "source": "src",
    "sources": {
      "css": ":{{common.source}}/**/*.css",
      "csslint": ":{{common.source}}/**/*.css",
      "html": ":{{common.source}}/**/*.html",
      "less": ":{{common.source}}/**/*.less",
      "lesslint": ":{{common.source}}/**/*.less",
      "javascript": ":{{common.source}}/**/*.js",
      "js": ":{{common.source}}/**/*.js",
      "jslint": ":{{common.source}}/**/*.js",
      "php": ":{{common.source}}/**/*.php",
      "sass": [
        ":{{common.source}}/**/*.sass",
        ":{{common.source}}/**/*.scss"
      ],
      "sasslint": [
        ":{{common.source}}/**/*.sass",
        ":{{common.source}}/**/*.scss"
      ],
      "ts": ":{{common.source}}/**.*.ts",
      "tslint": ":{{common.source}}/**.*.ts",
      "typescript": ":{{common.source}}/**.*.ts"
    }
  },
  "options": {
    "build": {
      "default": true
    },
    "deploy": {},
    "package": {
      "dest": ":{{common.dest}}",
      "format": "{{name}}.{{version}}.zip",
      "src": ":{{common.dest}}/**/*",
      "tasks": ":{{common.names.build}}"
    },
    "publish": {
      "src": [
        "package.json"
      ],
      "npm": {
        "credentials": ":{{common.credentials}}",
        "registry": "https://registry.npmjs.org"
      }
    },
    "sites": {
      "ftp": {
        "credentials": ":{{common.credentials}}",
        "host": null,
        "key": ":{{common.key}}",
        "secure": false
      },
      "ssh": {
        "credentials": ":{{common.credentials}}",
        "host": null,
        "key": ":{{common.key}}",
        "secure": false
      }
    },
    "watch": {
      "configurations": {
        "src": [
          "bower.json",
          "gulpfile.js",
          "gulpfile.json",
          "package.json"
        ]
      },
      "debounce": 500,
      "interval": 100
    }
  },
  "plugins": {}
}