{
  "common": {
    "artifacts": null,
    "debug": false,
    "dest": "dist",
    "key": {
      "private": null,
      "public": null
    },
    "sources": {
      "css": [
        "src/**/*.css"
      ],
      "csslint": [
        "src/**/*.css"
      ],
      "html": [
        "src/**/*.html"
      ],
      "less": [
        "src/**/*.less"
      ],
      "lesslint": [
        "src/**/*.less"
      ],
      "javascript": [
        "src/**/*.js"
      ],
      "js": [
        "src/**/*.js"
      ],
      "jslint": [
        "src/**/*.js"
      ],
      "sass": [
        "src/**/*.sass",
        "src/**/*.scss"
      ],
      "sasslint": [
        "src/**/*.sass",
        "src/**/*.scss"
      ],
      "ts": [
        "src/**.*.ts"
      ],
      "tslint": [
        "src/**.*.ts"
      ],
      "typescript": [
        "src/**.*.ts"
      ]
    }
  },
  "options": {
    "build": {
      "default": true
    },
    "deploy": {
      "source": [],
      "target": []
    },
    "overrides": {
      "names": {
        "build": "build",
        "clean": "clean",
        "deploy": "deploy",
        "package": "package",
        "publish": "publish",
        "version": "version",
        "watch": "watch"
      }
    },
    "package": {
      "dest": ":{{common.dest}}",
      "format": "{{name}}.{{version}}.zip",
      "src": ":{{common.dest}}/**/*",
      "tasks": ":{{options.overrides.names.build}}"
    },
    "publish": {
      "src": [
        "package.json"
      ],
      "npm": {
        "registry": "https://registry.npmjs.org"
      }
    },
    "watch": {
      "configurations": {
        "src": [
          "bower.json",
          "gulpfile.js",
          "gulpfile.json",
          "package.json"
        ]
      },
      "debounce": 500,
      "interval": 100
    }
  },
  "plugins": {}
}